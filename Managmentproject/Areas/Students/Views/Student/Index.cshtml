@model List<Student>

<partial name="_Notification" />

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Student Category</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            @* defines space between table and text row  *@
            <div class="col-6">
                <h2 class="text-primary">
                    Student List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Student" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>   Create StudentCategory
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Student Id
                    </th>
                    <th>
                        Student Name
                    </th>
                    <th>
                        Section
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.Section))
                {
                    <tr>
                        <td>@obj.StudentId</td>
                        <td>@obj.StudentName</td>
                        <td>@obj.Section</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Student" asp-action="Edit" asp-route-studentid="@obj.StudentId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Student" asp-action="Delete" asp-route-studentid="@obj.StudentId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
