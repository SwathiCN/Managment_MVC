@model Student
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Student Category</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
    <form method="post">
    <input asp-for="StudentId" hidden/> 
    <div class="border p-3 mt-4">
       
        @*  <div asp-validation-summary="ModelOnly"></div> *@

            <div class="form-floating py-2 col-12">
                <input asp-for="StudentId" class="form-control border-0 shadow" />
                <label asp-for="StudentId" class="ms-2"></label>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <div class="form-floating py-2 col-12">
                <input asp-for="StudentName" class="form-control border-0 shadow" />
                <label asp-for="StudentName" class="ms-2"></label>
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>


            <div class="form-floating py-2 col-12">

                <input asp-for="Section" class="form-control border-0 shadow" />
                <label asp-for="Section" class="ms-2"></label>
                <span asp-validation-for="Section" class="text-danger"></span>
            </div>
        <div class="row mt-3">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                @* small/medium take 6or 3 col *@
                <a asp-controller="Student" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
            </div>
        </div>


    </div>
</form>
</div>
</div>




@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}