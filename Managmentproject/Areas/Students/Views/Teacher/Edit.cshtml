@model Teacher
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Teacher</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <input asp-for="TeacherId" hidden />

            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="TeacherId" class="form-control border-0 shadow" />
                    <label asp-for="TeacherId" class="ms-2"></label>
                    <span asp-validation-for="TeacherId" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="TeacherName" class="form-control border-0 shadow" />
                    <label asp-for="TeacherName" class="ms-2"></label>
                    <span asp-validation-for="TeacherName" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Teacher" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
